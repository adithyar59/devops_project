pipeline {
    agent any // This means the pipeline can run on any available agent

    stages {
        stage('Build') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t my-todo-app .'
                }
            }
        }

        stage('Test') {
            steps {
                // Run your tests here
                echo 'Running tests...'
                // Add your test commands (e.g., unit tests) here
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Run the Docker container
                    sh 'docker run -d -p 8080:80 my-todo-app'
                }
            }
        }
    }
}
